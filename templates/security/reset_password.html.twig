<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <link rel="shortcut icon" href="{{ asset('build/images/your_lawyers_icon.a7109bc7.png') }}">
    <title>Set Password - BA OnBoarding - Your Lawyers Ltd</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
        <style>
            html,body {
                background-color: lightgray;
                background-image: url({{ asset('build/images/login-bg.9bc12d45.jpg') }});
                background-size: cover;
                background-repeat: no-repeat;
                height: 100%;
                font-family: 'Numans', sans-serif;
            }
            .login_container {
                height: 100%;
                align-content: center;
            }
            #login_form .card {
                padding: 20px;
                margin-top: auto;
                margin-bottom: auto;

                background-color: rgba(0,0,0,0.6) !important;
            }
            #login_form .card-header h4 {
                color: white;
            }
            #login_form .card-body p {
                color: white;
                text-align: center;
            }
            #login_form .input-group-prepend span {
                width: 40px;
                background-color: #9494ca;
                color: black;
                border: 0 !important;
            }
            #login_form input:focus {
                outline: 0  !important;
                box-shadow: 0 0 0 0 !important;
            }
            #login_form label {color: #ffffff; margin-top: 7px;}
            #login_form .login_btn {
                color: #ffffff;
                background-color: #5a7795;
            }
            #login_form .login_btn:hover {
                color: #000000;
                background-color: #ffffff;
            }
            #login_form .card-footer .links a {color: #ffffff; font-size: small;}
            #password_reset_password ul { background-color: red; padding: 7px; list-style: none; opacity:.7; }
            #password_reset_password ul li { color: white; opacity:.8;}
        </style>
    {% endblock %}
</head>
<body>
<div class="container login_container">
    <div class="d-flex justify-content-center h-100" id="login_form">
        <div class="card">
            <div class="card-header text-center">
                <img src="{{ asset('build/images/yl_92x75.1da10cc4.png') }}" alt="Your Lawyers Ltd">
                <h4>Set Your Password</h4>
            </div>
            <div class="card-body">
                    {%  if token_error %}
                        <div class="alert alert-danger text-center">
                            <small>The password token you're attempting to use<br>is either invalid or out-of-date!</small>
                            <hr>
                            <small><a href="{{ path('app_forgot_password') }}">Click here to create a fresh token to continue</a></small>
                        </div>
                    {% else %}
                        {{ form_start(form) }}
                            <div class="form-group">
                                {{ form_label(form.password) }}
                                {{ form_widget(form.password) }}
                                <div class="error_message">{{ form_errors(form.password) }}</div>
                            </div>
                            <div class="form-group text-center">
                                <input type="submit" value="Reset Password" class="btn login_btn">
                            </div>
                        {{ form_end(form) }}
                    {% endif %}
            </div>
            <div class="card-footer">
                <div class="d-flex justify-content-center links">
                </div>
            </div>
        </div>
    </div>
</div>
{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}
</body>
</html>
