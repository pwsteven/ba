<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <link rel="shortcut icon" href="{{ asset('build/images/your_lawyers_icon.a7109bc7.png') }}">
    <title>Forgot Password - BA Data Breach App - Your Lawyers Ltd</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app_login') }}
    {% endblock %}
</head>
<body>
<div class="container login_container">
    <div class="d-flex justify-content-center h-100" id="login_form">
        <div class="card">
            <div class="card-header text-center">
                <img src="{{ asset('build/images/yl_92x75.1da10cc4.png') }}" alt="Your Lawyers Ltd">
                <h4>Forgot Password</h4>
            </div>
            <div class="card-body">
                <form method="post">
                    <p class="text-white text-center"><small>Enter your email below and we'll<br>send you a password recovery link!</small></p>
                    {%  if error %}
                        <div class="alert alert-danger"><small>{{ error }}</small></div>
                    {% endif %}
                    {%  if success %}
                        <div class="alert alert-success"><small>{{ success }}</small></div>
                    {% endif %}
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-user"></i></span>
                        </div>
                        <label for="inputEmail" class="sr-only"></label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="email" required autofocus>
                    </div>

                    <div class="form-group text-center">
                        <input type="submit" value="Submit" class="btn login_btn">
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                </form>
            </div>
            <div class="card-footer">
                <div class="d-flex justify-content-center links">
                </div>
            </div>
        </div>
    </div>
</div>
{% block javascripts %}
    {{ encore_entry_script_tags('app_login') }}
{% endblock %}
</body>
</html>
