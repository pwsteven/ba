{% extends 'base.html.twig' %}

{% block title %}{{ header_text }}{% endblock %}

{% block body %}

    {# Grid #}
    <div class="col-12">
        {# Page Header #}
        <div class="dt-page__header">
            <h1 class="dt-page__title">{{ header_text }}</h1>
            <span>The British Airways OnBoarding App.</span>
        </div>
        {# /Page Header #}
    </div>
    {# /Grid #}

    {# Grid #}
    <div class="col-12">
        <div class="progress mb-5">
            <div class="progress-bar" role="progressbar" style="width: 10%" aria-valuenow="10" aria-valuemin="0"
                 aria-valuemax="100">10%
            </div>
        </div>
    </div>
    {# /Grid #}

    {# Grid #}
    <div class="col-12">
        {# Card #}
        <div class="dt-card">

            {{ form_start(form, {'attr': {'id': 'ba_form'}}) }}

            {# First Name Form Row #}
            <div class="form-row">
                {# Grid Item #}
                <div class="col-md-12 col-sm-12">
                    {# Card #}
                    <div class="dt-card">
                        {# Card Header #}
                        <div class="dt-card__header">
                            <h4><span class="text-danger">*</span>1. What is your First Name?</h4>
                        </div>
                        {# /Card Header #}
                        {# Card Body #}
                        <div class="dt-card__body">
                            <div class="row">
                                <div class="col-md-12 col-sm-12">
                                    {{ form_widget(form.firstName) }}
                                    <small class="form-text">Please provide your legal first name, not a nickname or shortened name.</small>
                                    <div class="error_message">{{ form_errors(form.firstName) }}</div>
                                </div>
                            </div>
                        </div>
                        {# /Card Body #}
                    </div>
                    {# /Card #}
                </div>
                {# /Grid Item #}
            </div>
            {# /First Name Form Row #}

            {# Middle Name Form Row #}
            <div class="form-row">
                {# Grid Item #}
                <div class="col-md-12 col-sm-12">
                    {# Card #}
                    <div class="dt-card">
                        {# Card Header #}
                        <div class="dt-card__header">
                            <h4>2. What is your Middle Name?</h4>
                        </div>
                        {# /Card Header #}
                        {# Card Body #}
                        <div class="dt-card__body">
                            <div class="row">
                                <div class="col-md-12 col-sm-12">
                                    {{ form_widget(form.middleName) }}
                                    <small class="form-text">Please provide your legal middle name, if you have one.</small>
                                </div>
                            </div>
                        </div>
                        {# /Card Body #}
                    </div>
                    {# /Card #}
                </div>
                {# /Grid Item #}
            </div>
            {# /Middle Name Form Row #}

            {# Surname Form Row #}
            <div class="form-row">
                {# Grid Item #}
                <div class="col-md-12 col-sm-12">
                    {# Card #}
                    <div class="dt-card">
                        {# Card Header #}
                        <div class="dt-card__header">
                            <h4><span class="text-danger">*</span>3. What is your Surname?</h4>
                        </div>
                        {# /Card Header #}
                        {# Card Body #}
                        <div class="dt-card__body">
                            <div class="row">
                                <div class="col-md-12 col-sm-12">
                                    {{ form_widget(form.surname) }}
                                    <div class="error_message">{{ form_errors(form.surname) }}</div>
                                </div>
                            </div>
                        </div>
                        {# /Card Body #}
                    </div>
                    {# /Card #}
                </div>
                {# /Grid Item #}
            </div>
            {# /Surname Form Row #}

            {# Date Of Birth Form Row #}
            <div class="form-row">
                {# Grid Item #}
                <div class="col-md-12 col-sm-12">
                    {# Card #}
                    <div class="dt-card">
                        {# Card Header #}
                        <div class="dt-card__header">
                            <h4><span class="text-danger">*</span>4. What is your full Date of Birth?</h4>
                        </div>
                        {# /Card Header #}
                        {# Card Body #}
                        <div class="dt-card__body">
                            <div class="row">
                                <div class="col-md-12 col-sm-12">
                                    {{ form_widget(form.dateOfBirth) }}
                                    <div class="error_message">{{ form_errors(form.dateOfBirth) }}</div>
                                </div>
                            </div>
                        </div>
                        {# /Card Body #}
                    </div>
                    {# /Card #}
                </div>
                {# /Grid Item #}
            </div>
            {# /Date Of Birth Form Row #}

            {# Upload Photo ID Form Row #}
            <div class="form-row">
                {# Grid Item #}
                <div class="col-md-12 col-sm-12">
                    {# Card #}
                    <div class="dt-card">
                        {# Card Header #}
                        <div class="dt-card__header">
                            <h4 class="dt-card__title">5. Upload Photo ID:</h4>
                        </div>
                        {# /Card Header #}
                        {# Card Body #}
                        <div class="dt-card__body">
                            <div class="row">
                                <div class="col-md-6 col-sm-6">
                                    <button id="personal-details-button" type="button" class="btn btn-primary mb-5" data-toggle="modal" data-target="#personal-details-stage">
                                        Choose File
                                    </button>
                                </div>
                                <div class="col-md-6 col-sm-6">
                                    <h4>All Uploaded Files For This Stage</h4>
                                    <ul class="list-group small js-reference-list" data-url="{{ path('get_file_references', {str: 'personal-details'}) }}"></ul>
                                </div>
                            </div>
                        </div>
                        {# /Card Body #}
                    </div>
                    {# /Card #}
                </div>
                {# /Grid Item #}
            </div>
            {# /Upload Photo ID Form Row #}

            {# Submit Form Row #}
            <div class="form-row">
                <div class="form-group col-md-12 text-right">
                    <button type="submit" class="btn btn-outline-info btn-lg" title="continue to the next stage...">Submit &amp; Continue <i class="icon icon-forward"></i></button>
                </div>
            </div>
            {# /Submit Form Row #}

            {{ form_end(form) }}

        </div>
        {# /Card #}
    </div>
    {# /Grid #}

    {{ include('dashboard/modals/_personal_details.html.twig') }}

{% endblock %}

