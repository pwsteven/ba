                {# Grid Item #}
                <div class="col-md-12 col-sm-12">
                    {# Card #}
                    <div class="dt-card">
                        {# Card Header #}
                        <div class="dt-card__header">
                            <h4><span class="text-danger">*</span>28. Please indicate whether you have ever been diagnosed as suffering from any of the following conditions:</h4>
                        </div>
                        {# /Card Header #}
                        {# Card Body #}
                        <div class="dt-card__body">
                            <div class="row">
                                <div class="col-md-12 col-sm-12">
                                    {{ form_widget(form.diagnosedConditionsNew) }}
                                    <div class="error_message">{{ form_errors(form.diagnosedConditionsNew) }}</div>
                                </div>
                            </div>
                            {# DIAGNOSED CONDITIONS BLOCK #}
