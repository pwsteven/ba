{# Begin Modal #}
<div class="modal fade" id="personal-details-stage" tabindex="-1" role="dialog" aria-labelledby="model-4"
     aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">

        {# Modal Content #}
        <div class="modal-content">

            {# Modal Header #}
            <div class="modal-header">
                <h3 class="modal-title" id="model-4">Personal Details Upload</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            {# /Modal Header #}

            {# Modal Body #}
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-8 mb-5">

                        {# Upload Form #}
                        <form action="{{ path('upload_file_reference', {
                            id: app.user.id
                        }) }}" method="POST" enctype="multipart/form-data" class="dropzone js-reference-dropzone">
                            <input type="hidden" name="file_stage" value="personal-details">
                            <input type="hidden" name="form_upload_name" id="form_upload_name" value="photo-id">
                        </form>
                        {# /Upload Form #}

                    </div>
                    <div class="col-md-4">
                        <h4>Uploaded Files</h4>
                        <ul class="list-group small js-reference-list" data-url="{{ path('get_file_references', {str: 'personal-details'}) }}"></ul>
                    </div>
                </div>
            </div>
            {# /Modal Body #}

            {# Modal Footer #}
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Close</button>
            </div>
            {# /Modal Footer #}

        </div>
        {# /Modal Content #}

    </div>
</div>
{# /Modal #}
