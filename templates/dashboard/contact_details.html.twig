{% extends 'base.html.twig' %}

{% block title %}{{ header_text }}{% endblock %}

{% block body %}

    {# Grid #}
    <div class="col-12">
        {# Page Header #}
        <div class="dt-page__header">
            <h1 class="dt-page__title">{{ header_text }}</h1>
            <span>The British Airways OnBoarding App.</span>
        </div>
        {# /Page Header #}
    </div>
    {# /Grid #}

    {# Grid #}
    <div class="col-12">

        {% for message in app.session.flashBag.get('page_success') %}
            <div class="dt-card__body">
                <div class="alert alert-primary alert-dismissible fade show" role="alert">
                    <strong>Awesome!</strong> You completed the Personal Details section. Let's keep going...
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        {% endfor %}

        <div class="progress mb-5">
            <div class="progress-bar" role="progressbar" style="width: 20%" aria-valuenow="20" aria-valuemin="0"
                 aria-valuemax="100">20%
            </div>
        </div>
    </div>
    {# /Grid #}

    {# Grid #}
    <div class="col-12">
        {# Card #}
        <div class="dt-card">

            {{ form_start(form, {'attr': {'id': 'ba_form'}}) }}

            {# Form Row #}
            <div class="form-row">
                {# Grid Item #}
                <div class="col-md-12 col-sm-12">
                    {# Card #}
                    <div class="dt-card">
                        {# Card Header #}
                        <div class="dt-card__header">
                            <h4>6. Please provide your Full Address:</h4>
                        </div>
                        {# /Card Header #}
                        {# Card Body #}
                        <div class="dt-card__body">
                            {# Postcode Form Row #}
                            <div class="row">
                                <div class="form-group col-md-8">
                                    {{ form_label(form.postcode)}}
                                    {{ form_widget(form.postcode) }}
                                    <div class="error_message">{{ form_errors(form.postcode) }}</div>
                                </div>
                                <div class="form-group col-md-4 d-flex align-items-end">
                                    <button type="button" id="find_address" class="btn btn-secondary btn-lg">Find Address <i class="fa fa-search" aria-hidden="true"></i></button>
                                </div>
                                <div id="find_postcode_message" class="col-md-12 mt-0 mb-3"></div>
                            </div>
                            {# /Postcode Form Row #}
                            {# Select Address Block #}
                            <div id="select_address_block" class="display_none">
                                <div class="block_body">
                                    <div class="form-row">
                                        <div class="form-group col-md-12">
                                            <label for="address_picker">Please choose your address:</label>
                                            <select name="address_picker" id="address_picker" class="form-control form-control-lg">
                                                <option value="">SELECT</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {# /Select Address Block #}

                            {# Street Address Form Row #}
                            <div class="form-row">
                                <div class="form-group col-md-12">
                                    {{ form_label(form.streetAddress)}}
                                    {{ form_widget(form.streetAddress) }}
                                    <div class="error_message">{{ form_errors(form.streetAddress) }}</div>
                                </div>
                            </div>
                            {# /Street Address Form Row #}

                            {# Street Address Line 2 Form Row #}
                            <div class="form-row">
                                <div class="form-group col-md-12">
                                    {{ form_label(form.streetAddress2)}}
                                    {{ form_widget(form.streetAddress2) }}
                                    <div class="error_message">{{ form_errors(form.streetAddress2) }}</div>
                                </div>
                            </div>
                            {# /Street Address Line 2 Form Row #}

                            {# Street Address Line 3 Form Row #}
                            <div class="form-row">
                                <div class="form-group col-md-12">
                                    {{ form_label(form.streetAddress3)}}
                                    {{ form_widget(form.streetAddress3) }}
                                    <div class="error_message">{{ form_errors(form.streetAddress3) }}</div>
                                </div>
                            </div>
                            {# /Street Address Line 3 Form Row #}

                            {# Town/City Form Row #}
                            <div class="form-row">
                                <div class="form-group col-md-12">
                                    {{ form_label(form.townCity)}}
                                    {{ form_widget(form.townCity) }}
                                    <div class="error_message">{{ form_errors(form.townCity) }}</div>
                                </div>
                            </div>
                            {# /Town/City Form Row #}

                            {# County Form Row #}
                            <div class="form-row">
                                <div class="form-group col-md-12">
                                    {{ form_label(form.county)}}
                                    {{ form_widget(form.county) }}
                                    <div class="error_message">{{ form_errors(form.county) }}</div>
                                </div>
                            </div>
                            {# /County Form Row #}
                        </div>
                        {# /Card Body #}
                    </div>
                    {# /Card #}
                </div>
                {# /Grid Item #}
            </div>
            {# /Form Row #}

            {# Email Address Form Row #}
            <div class="form-row">
                {# Grid Item #}
                <div class="col-md-12 col-sm-12">
                    {# Card #}
                    <div class="dt-card">
                        {# Card Header #}
                        <div class="dt-card__header">
                            <h4><span class="text-danger">*</span>7. Please provide your Email Address:</h4>
                        </div>
                        {# /Card Header #}
                        {# Card Body #}
                        <div class="dt-card__body">
                            <div class="row">
                                <div class="col-md-12 col-sm-12">
                                    {{ form_widget(form.emailAddress) }}
                                    <div class="error_message">{{ form_errors(form.emailAddress) }}</div>
                                </div>
                            </div>
                        </div>
                        {# /Card Body #}
                    </div>
                    {# /Card #}
                </div>
                {# /Grid Item #}
            </div>
            {# /Email Address Form Row #}

            {# Mobile/Telephone Number Form Row #}
            <div class="form-row">
                {# Grid Item #}
                <div class="col-md-12 col-sm-12">
                    {# Card #}
                    <div class="dt-card">
                        {# Card Header #}
                        <div class="dt-card__header">
                            <h4><span class="text-danger">*</span>8. Please provide your Mobile/Telephone Number:</h4>
                        </div>
                        {# /Card Header #}
                        {# Card Body #}
                        <div class="dt-card__body">
                            <div class="row">
                                <div class="col-md-12 col-sm-12">
                                    {{ form_widget(form.mobileTelephoneNumber) }}
                                    <div class="error_message">{{ form_errors(form.mobileTelephoneNumber) }}</div>
                                </div>
                            </div>
                        </div>
                        {# /Card Body #}
                    </div>
                    {# /Card #}
                </div>
                {# /Grid Item #}
            </div>
            {# /Mobile/Telephone Number Form Row #}

            {# Submit Form Row #}
            <div class="form-row">
                <div class="form-group col-md-12 text-right">
                    <button type="submit" id="submit-form-button" class="btn btn-outline-info btn-lg" title="continue to the next stage...">Submit &amp; Continue <i class="icon icon-forward"></i></button>
                </div>
            </div>
            {# /Submit Form Row #}

            {{ form_end(form) }}

        </div>
        {# /Card #}
    </div>
    {# /Grid #}

{% endblock %}
