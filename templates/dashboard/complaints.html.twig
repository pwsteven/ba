{% extends 'base.html.twig' %}

{% block title %}{{ header_text }} - BA OnBoarding - Your Lawyers Ltd{% endblock %}

{% block body %}
    {{ include('blocks/title_breadcrumb.html.twig') }}
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    {{ form_start(form, {'attr': {'class': 'forms-sample'}}) }}
                    <div class="form-group mb-30">
                        {{ form_label(form.lodgedComplaint)}}
                        {{ form_widget(form.lodgedComplaint) }}
                        <div class="error_message">{{ form_errors(form.lodgedComplaint) }}</div>
                    </div>
                    {# BEGIN COMPLAINT BLOCK #}
                    <div id="complaint_block"{% if form.vars.data.lodgedComplaint != 'YES' %} class="display_none"{% endif %}>
                        <div class="col-sm-12">
                            <div class="block_body">
                                <div class="form-group mb-30">
                                    {{ form_label(form.complaintMade)}}
                                    {{ form_widget(form.complaintMade) }}
                                    <div class="error_message">{{ form_errors(form.complaintMade) }}</div>
                                </div>
                                <div class="form-group mb-30">
                                    {{ form_label(form.receivedResponse)}}
                                    {{ form_widget(form.receivedResponse) }}
                                    <div class="error_message">{{ form_errors(form.receivedResponse) }}</div>
                                </div>
                                <div id="complaint_satisfied_response_block"{% if form.vars.data.receivedResponse is null or form.vars.data.receivedResponse == 'Yes' %} class="display_none"{% endif %}>
                                    <div class="form-group mb-30">
                                        {{ form_label(form.satisfiedResponse)}}
                                        {{ form_widget(form.satisfiedResponse) }}
                                        <div class="error_message">{{ form_errors(form.satisfiedResponse) }}</div>
                                    </div>
                                </div>
                                <div id="complaint_reason_unsatisfied_block"{% if form.vars.data.reasonUnsatisfied is null or form.vars.data.satisfiedResponse == 'Yes' %} class="display_none"{% endif %}>
                                    <div class="form-group mb-30">
                                        {{ form_label(form.reasonUnsatisfied)}}
                                        {{ form_widget(form.reasonUnsatisfied) }}
                                        <div class="error_message">{{ form_errors(form.reasonUnsatisfied) }}</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {# END COMPLAINT BLOCK #}
                    <div class="form-group mb-30">
                        {{ form_label(form.contactedIOC)}}
                        {{ form_widget(form.contactedIOC) }}
                        <div class="error_message">{{ form_errors(form.contactedIOC) }}</div>
                    </div>
                    <div class="form-group mb-30">
                        {{ form_label(form.contactedActionFraud)}}
                        {{ form_widget(form.contactedActionFraud) }}
                        <div class="error_message">{{ form_errors(form.contactedActionFraud) }}</div>
                    </div>
                    <div class="form-group mb-30">
                        {{ form_label(form.accessedGetSafeOnline)}}
                        {{ form_widget(form.accessedGetSafeOnline) }}
                        <div class="error_message">{{ form_errors(form.accessedGetSafeOnline) }}</div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 text-right">
                            <button type="submit" class="btn btn-primary mr-2 p5">Submit &amp; Continue <i class="ik ik-chevrons-right"></i></button>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>


{% endblock %}
