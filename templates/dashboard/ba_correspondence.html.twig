{% extends 'base.html.twig' %}

{% block title %}{{ header_text }}{% endblock %}

{% block body %}

    <div class="col-12">
        <h2>Test File Uploads</h2>


        <hr>
    </div>

    {# Grid #}
    <div class="col-12">
        {# Page Header #}
        <div class="dt-page__header">
            <h1 class="dt-page__title">{{ header_text }}</h1>
            <span>The British Airways OnBoarding App.</span>
        </div>
        {# /Page Header #}
    </div>
    {# /Grid #}

    {% for message in app.session.flashBag.get('page_success') %}
        <div class="dt-card__body">
            <div class="alert alert-primary alert-dismissible fade show" role="alert">
                <strong>Fantastic!</strong> You completed the Contact Details section. Let's keep going...
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
    {% endfor %}

    {# Grid #}
    <div class="col-12">
        <div class="progress mb-2">
            <div class="progress-bar" role="progressbar" style="width: 30%" aria-valuenow="30" aria-valuemin="0"
                 aria-valuemax="100">Step 3 of 10
            </div>
        </div>
    </div>
    {# /Grid #}

    {# Grid #}
    <div class="col-12">
        {# Card #}
        <div class="dt-card">

            {{ form_start(form, {'attr': {'id': 'ba_form'}}) }}

            {# Received Confirmation Email Form Row #}
            <div class="form-row">
                <div class="form-group col-md-12">
                    {{ form_label(form.receivedConfirmationEmail) }}
                    {{ form_widget(form.receivedConfirmationEmail) }}
                    <div class="error_message">{{ form_errors(form.receivedConfirmationEmail) }}</div>
                </div>
            </div>
            {# /Received Confirmation Email Form Row #}

            <hr class="border-dashed my-8">

            {# Breach One Notification Form Row #}
            <div class="form-row">
                <div class="form-group col-md-12">
                    {{ form_label(form.breachOneNotification) }}
                    {{ form_widget(form.breachOneNotification) }}
                    <div class="error_message">{{ form_errors(form.breachOneNotification) }}</div>
                </div>
            </div>
            {# /Breach One Notification Form Row #}

            {# Breach One Block #}
            <div id="breach_one_block"{% if form.vars.data.breachOneNotification != 'YES' %} class="display_none"{% endif %}>
                <div class="block_body">

                    {# Breach One Date Received Form Row #}
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            {{ form_label(form.breachOneDateReceived) }}
                            {{ form_widget(form.breachOneDateReceived) }}
                            <div class="error_message">{{ form_errors(form.breachOneDateReceived) }}</div>
                        </div>
                    </div>
                    {# /Breach One Date Received Form Row #}

                    {# Breach One Notification File Upload Form Row #}
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            {{ form_label(form.breachOneNotificationFile) }}
                            {{ form_widget(form.breachOneNotificationFile) }}
                            <div class="error_message">{{ form_errors(form.breachOneNotificationFile) }}</div>
                        </div>
                        <div class="form-group col-md-12">
                            {% if form.vars.data.breachOneNotificationFilePath != "" %}
                                <p><b>Uploaded File:</b> {{ form.vars.data.breachOneNotificationFilePath }}</p>
                                <hr class="border-dashed my-8">
                            {% endif %}
                        </div>
                    </div>
                    {# /Breach One Notification File Upload Form Row #}

                    {# Breach One Notification Not Affected Form Row #}
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            {{ form_label(form.breachOneNotificationNotAffected) }}
                            {{ form_widget(form.breachOneNotificationNotAffected) }}
                            <div class="error_message">{{ form_errors(form.breachOneNotificationNotAffected) }}</div>
                        </div>
                    </div>
                    {# /Breach One Notification Not Affected Form Row #}

                    {# Breach One Booking Date Form Row #}
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            {{  form_label(form.breachOneDateOfBooking) }}
                            {{ form_widget(form.breachOneDateOfBooking) }}
                            <div class="error_message">{{ form_errors(form.breachOneDateOfBooking) }}</div>
                        </div>
                    </div>
                    {# /Breach One Booking Date Form Row #}

                    {# Breach One Email Used Form Row #}
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            {{ form_label(form.breachOneEmailAddressUsed) }}
                            {{ form_widget(form.breachOneEmailAddressUsed) }}
                            <div class="error_message">{{ form_errors(form.breachOneEmailAddressUsed) }}</div>
                        </div>
                    </div>
                    {# /Breach One Email Used Form Row #}

                    {# Breach One Booking Reference Form Row #}
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            {{ form_label(form.breachOneBookingReference) }}
                            {{ form_widget(form.breachOneBookingReference) }}
                            <div class="error_message">{{ form_errors(form.breachOneBookingReference) }}</div>
                        </div>
                    </div>
                    {# /Breach One Booking Reference Form Row #}

                    {# Breach One Booking Platform Form Row #}
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            {{ form_label(form.breachOneBookingPlatform) }}
                            {{ form_widget(form.breachOneBookingPlatform) }}
                            <div class="error_message">{{ form_errors(form.breachOneBookingPlatform) }}</div>
                        </div>
                    </div>
                    {# /Breach One Booking Platform Form Row #}

                    {# Breach One Booking Payment Form Row #}
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            {{ form_label(form.breachOnePaymentMethod) }}
                            {{ form_widget(form.breachOnePaymentMethod) }}
                            <div class="error_message">{{ form_errors(form.breachOnePaymentMethod) }}</div>
                        </div>
                    </div>
                    {# /Breach One Booking Payment Form Row #}

                    {# Breach One Booking File Upload Form Row #}
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            {{ form_label(form.breachOneBookingConfirmationFile) }}
                            {{ form_widget(form.breachOneBookingConfirmationFile) }}
                            <div class="error_message">{{ form_errors(form.breachOneBookingConfirmationFile) }}</div>
                        </div>
                        <div class="form-group col-md-12">
                            {% if form.vars.data.breachOneBookingConfirmationFilePath != "" %}
                                <p><b>Uploaded File:</b> {{ form.vars.data.breachOneBookingConfirmationFilePath }}</p>
                                <hr class="border-dashed my-8">
                            {% endif %}
                        </div>
                    </div>
                    {# /Breach One Booking File Upload Form Row #}

                </div>
            </div>
            {# /Breach One Block #}

            <hr class="border-dashed my-8">

            {# Breach Two Notification Form Row #}
            <div class="form-row">
                <div class="form-group col-md-12">
                    {{ form_label(form.breachTwoNotification)}}
                    {{ form_widget(form.breachTwoNotification) }}
                    <div class="error_message">{{ form_errors(form.breachTwoNotification) }}</div>
                </div>
            </div>
            {# /Breach Two Notification Form Row #}

            {# Breach Two Block #}
            <div id="breach_two_block"{% if form.vars.data.breachTwoNotification != 'YES' %} class="display_none"{% endif %}>
                <div class="block_body">

                    {# Breach Two Date Received Form Row #}
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            {{ form_label(form.breachTwoDateReceived) }}
                            {{ form_widget(form.breachTwoDateReceived) }}
                            <div class="error_message">{{ form_errors(form.breachTwoDateReceived) }}</div>
                        </div>
                    </div>
                    {# /Breach Two Date Received Form Row #}

                    {# Breach Two Notification File Upload Form Row #}
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            {{ form_label(form.breachTwoNotificationFile) }}
                            {{ form_widget(form.breachTwoNotificationFile) }}
                            <div class="error_message">{{ form_errors(form.breachTwoNotificationFile) }}</div>
                        </div>
                        <div class="form-group col-md-12">
                            {% if form.vars.data.breachTwoNotificationFilePath != "" %}
                                <p><b>Uploaded File:</b> {{ form.vars.data.breachTwoNotificationFilePath }}</p>
                                <hr class="border-dashed my-8">
                            {% endif %}
                        </div>
                    </div>
                    {# /Breach Two Notification File Upload Form Row #}

                    {# Breach Two Notification Not Affected Form Row #}
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            {{ form_label(form.breachTwoNotificationNotAffected) }}
                            {{ form_widget(form.breachTwoNotificationNotAffected) }}
                            <div class="error_message">{{ form_errors(form.breachTwoNotificationNotAffected) }}</div>
                        </div>
                    </div>
                    {# /Breach Two Notification Not Affected Form Row #}

                    {# Breach Two Booking Date Form Row #}
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            {{  form_label(form.breachTwoDateOfBooking) }}
                            {{ form_widget(form.breachTwoDateOfBooking) }}
                            <div class="error_message">{{ form_errors(form.breachTwoDateOfBooking) }}</div>
                        </div>
                    </div>
                    {# /Breach Two Booking Date Form Row #}

                    {# Breach Two Email Used Form Row #}
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            {{ form_label(form.breachTwoEmailAddressUsed) }}
                            {{ form_widget(form.breachTwoEmailAddressUsed) }}
                            <div class="error_message">{{ form_errors(form.breachTwoEmailAddressUsed) }}</div>
                        </div>
                    </div>
                    {# /Breach Two Email Used Form Row #}

                    {# Breach Two Booking Reference Form Row #}
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            {{ form_label(form.breachTwoBookingReference) }}
                            {{ form_widget(form.breachTwoBookingReference) }}
                            <div class="error_message">{{ form_errors(form.breachTwoBookingReference) }}</div>
                        </div>
                    </div>
                    {# /Breach Two Booking Reference Form Row #}

                    {# Breach Two Booking Platform Form Row #}
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            {{ form_label(form.breachTwoBookingPlatform) }}
                            {{ form_widget(form.breachTwoBookingPlatform) }}
                            <div class="error_message">{{ form_errors(form.breachTwoBookingPlatform) }}</div>
                        </div>
                    </div>
                    {# /Breach Two Booking Platform Form Row #}

                    {# Breach Two Booking Payment Form Row #}
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            {{ form_label(form.breachTwoPaymentMethod) }}
                            {{ form_widget(form.breachTwoPaymentMethod) }}
                            <div class="error_message">{{ form_errors(form.breachTwoPaymentMethod) }}</div>
                        </div>
                    </div>
                    {# /Breach Two Booking Payment Form Row #}

                    {# Breach Two Booking File Upload Form Row #}
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            {{ form_label(form.breachTwoBookingConfirmationFile) }}
                            {{ form_widget(form.breachTwoBookingConfirmationFile) }}
                            <div class="error_message">{{ form_errors(form.breachTwoBookingConfirmationFile) }}</div>
                        </div>
                        <div class="form-group col-md-12">
                            {% if form.vars.data.breachTwoBookingConfirmationFilePath != "" %}
                                <p><b>Uploaded File:</b> {{ form.vars.data.breachTwoBookingConfirmationFilePath }}</p>
                                <hr class="border-dashed my-8">
                            {% endif %}
                        </div>
                    </div>
                    {# /Breach Two Booking File Upload Form Row #}


                </div>
            </div>
            {# /Breach Two Block #}

            {# Submit Form Row #}
            <div class="form-row">
                <div class="form-group col-md-12 text-right">
                    <button type="submit" class="btn btn-outline-info btn-lg" title="continue to the next stage...">Submit &amp; Continue <i class="icon icon-forward"></i></button>
                </div>
            </div>
            {# /Submit Form Row #}

            {{ form_end(form) }}

        </div>
        {# /Card #}
    </div>
    {# /Grid #}

{% endblock %}
