{% extends 'base.html.twig' %}

{% block title %}{{ header_text }}{% endblock %}

{% block body %}

    {# Grid #}
    <div class="col-12">
        {# Page Header #}
        <div class="dt-page__header">
            <h1 class="dt-page__title">{{ header_text }}</h1>
            <span>The British Airways OnBoarding App.</span>
        </div>
        {# /Page Header #}
    </div>
    {# /Grid #}

    {% for message in app.session.flashBag.get('page_success') %}
        <div class="dt-card__body">
            <div class="alert alert-primary alert-dismissible fade show" role="alert">
                <strong>Fabulous!</strong> You completed the Complaints section. Let's keep going...
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
    {% endfor %}

    {# Grid #}
    <div class="col-12">
        <div class="progress mb-2">
            <div class="progress-bar" role="progressbar" style="width: 60%" aria-valuenow="60" aria-valuemin="0"
                 aria-valuemax="100">Step 6 of 10
            </div>
        </div>
    </div>
    {# /Grid #}

    {# Grid #}
    <div class="col-12">
        {# Card #}
        <div class="dt-card">

            {{ form_start(form, {'attr': {'id': 'ba_form'}}) }}

            {# Suffered Financial Loss Form Row #}
            <div class="form-row">
                <div class="form-group col-md-12">
                    {{ form_label(form.typeFinancialLoss) }}
                </div>
                <div class="form-group col-md-12">
                    {% for FinancialLoss in form.typeFinancialLoss %}
                        <div class="custom-control custom-checkbox financial_loss mb-3 ml-5">
                            {{ form_widget(FinancialLoss, {
                                attr: {
                                    'class': 'custom-control-input'
                                }
                            }) }} <label class="custom-control-label" for="{{ FinancialLoss.vars.id }}">{{ FinancialLoss.vars.label }}</label>
                        </div>
                    {% endfor %}
                </div>
            </div>
            {# /Suffered Financial Loss Form Row #}

            {# FINANCIAL LOSS BLOCK #}
            <div id="financial_loss_block" class="display_none">

                {# Other Comment Form Row #}
                <div class="form-row">
                    <div class="form-group col-md-12 ml-5">
                        {{ form_label(form.typeFinancialLossOtherComment) }}
                        {{ form_widget(form.typeFinancialLossOtherComment) }}
                        <div class="error_message">{{ form_errors(form.typeFinancialLossOtherComment) }}</div>
                    </div>
                </div>
                {# /Other Comment Form Row #}

            </div>
            {# /FINANCIAL LOSS BLOCK #}

            <hr class="border-dashed my-8">

            {# Total Loss Amount Form Row #}
            <div class="form-row">
                <div class="form-group col-md-12">
                    {{ form_label(form.totalLossAmount) }}
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> &pound; </span>
                        </div>
                        {{ form_widget(form.totalLossAmount) }}
                    </div>
                    <div class="error_message">{{ form_errors(form.totalLossAmount) }}</div>
                </div>
            </div>
            {# /Total Loss Amount Form Row #}

            <hr class="border-dashed my-8">

            {# Financial Loss Upload Files Form Row #}
            <div class="form-row">
                <div class="form-group col-md-12">
                    {{ form_label(form.financialLossFiles) }}
                </div>
                <div class="form-group col-md-12">
                    {{ form_widget(form.financialLossFiles) }}
                    <div class="error_message">{{ form_errors(form.financialLossFiles) }}</div>
                </div>
                <div class="form-group col-md-12">
                    {% if form.vars.data.financialLossFilesPath != NULL %}
                        <p>
                            <b>Uploaded Files:</b><br>
                            {% for key,value in form.vars.data.financialLossFilesPath %}
                                {{ value }}<br>
                            {% endfor %}
                        </p>
                        <hr class="border-dashed my-8">
                    {% endif %}
                </div>
            </div>
            {# /Financial Loss Upload Files Form Row #}


            {# Submit Form Row #}
            <div class="form-row">
                <div class="form-group col-md-12 text-right">
                    <button type="submit" class="btn btn-outline-info btn-lg" title="continue to the next stage...">Submit &amp; Continue <i class="icon icon-forward"></i></button>
                </div>
            </div>
            {# /Submit Form Row #}

            {{ form_end(form) }}

        </div>
        {# /Card #}
    </div>
    {# /Grid #}

{% endblock %}
