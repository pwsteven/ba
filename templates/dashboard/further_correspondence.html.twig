{% extends 'base.html.twig' %}

{% block title %}{{ header_text }}{% endblock %}

{% block body %}

    {# Grid #}
    <div class="col-12">
        {# Page Header #}
        <div class="dt-page__header">
            <h1 class="dt-page__title">{{ header_text }}</h1>
            <span>The British Airways OnBoarding App.</span>
        </div>
        {# /Page Header #}
    </div>
    {# /Grid #}

    {% for message in app.session.flashBag.get('page_success') %}
        <div class="dt-card__body">
            <div class="alert alert-primary alert-dismissible fade show" role="alert">
                <strong>Superb!</strong> You completed the BA Correspondence section. Let's keep going...
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
    {% endfor %}

    {# Grid #}
    <div class="col-12">
        <div class="progress mb-2">
            <div class="progress-bar" role="progressbar" style="width: 40%" aria-valuenow="40" aria-valuemin="0"
                 aria-valuemax="100">Step 4 of 10
            </div>
        </div>
    </div>
    {# /Grid #}

    {# Grid #}
    <div class="col-12">
        {# Card #}
        <div class="dt-card">

            {{ form_start(form, {'attr': {'id': 'ba_form'}}) }}

            {# Breach Confirmation File Upload Form Row #}
            <div class="form-row">
                <div class="form-group col-md-12">
                    {{ form_label(form.personalInformationBreachedFile) }}
                    {{ form_widget(form.personalInformationBreachedFile) }}
                    <div class="error_message">{{ form_errors(form.personalInformationBreachedFile) }}</div>
                </div>
                <div class="form-group col-md-12">
                    {% if form.vars.data.personalInformationBreachedFilePath != "" %}
                        <p><b>Uploaded File:</b> {{ form.vars.data.personalInformationBreachedFilePath }}</p>
                    {% endif %}
                </div>
            </div>
            {# /Breach Confirmation File Upload Form Row #}

            <hr class="border-dashed my-8">

            {# Received Other BA Correspondence Form Row #}
            <div class="form-row">
                <div class="form-group col-md-12">
                    {{ form_label(form.receivedAnyOtherBACorrespondence) }}
                    {{ form_widget(form.receivedAnyOtherBACorrespondence) }}
                    <div class="error_message">{{ form_errors(form.receivedAnyOtherBACorrespondence) }}</div>
                </div>
            </div>
            {# /Received Other BA Correspondence Form Row #}

            <hr class="border-dashed my-8">

            {# All Correspondence Files Upload Form Row #}
            <div class="form-row">
                <div class="form-group col-md-12">
                    {{ form_label(form.allCorrespondenceSentReceivedFile) }}
                    {{ form_widget(form.allCorrespondenceSentReceivedFile) }}
                    <div class="error_message">{{ form_errors(form.allCorrespondenceSentReceivedFile) }}</div>
                </div>
                <div class="form-group col-md-12">
                    {% if form.vars.data.allCorrespondenceSentReceivedFilePath != NULL %}
                        <p>
                            <b>Uploaded Files:</b><br>
                            {% for key,value in form.vars.data.allCorrespondenceSentReceivedFilePath %}
                                {{ value }}<br>
                            {% endfor %}
                        </p>
                        <hr class="border-dashed my-8">
                    {% endif %}
                </div>
            </div>
            {# /All Correspondence Files Upload Form Row #}


            {# Submit Form Row #}
            <div class="form-row">
                <div class="form-group col-md-12 text-right">
                    <button type="submit" class="btn btn-outline-info btn-lg" title="continue to the next stage...">Submit &amp; Continue <i class="icon icon-forward"></i></button>
                </div>
            </div>
            {# /Submit Form Row #}

            {{ form_end(form) }}

        </div>
        {# /Card #}
    </div>
    {# /Grid #}

{% endblock %}
