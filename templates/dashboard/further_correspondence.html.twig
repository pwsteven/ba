{% extends 'base.html.twig' %}

{% block title %}{{ header_text }}{% endblock %}

{% block body %}

    {# Grid #}
    <div class="col-12">
        {# Page Header #}
        <div class="dt-page__header">
            <h1 class="dt-page__title">{{ header_text }}</h1>
            <span>The British Airways OnBoarding App.</span>
        </div>
        {# /Page Header #}
    </div>
    {# /Grid #}

    {% for message in app.session.flashBag.get('page_success') %}
        <div class="dt-card__body">
            <div class="alert alert-primary alert-dismissible fade show" role="alert">
                <strong>Superb!</strong> You completed the BA Correspondence section. Let's keep going...
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
    {% endfor %}

    {# Grid #}
    <div class="col-12">
        <div class="progress mb-5">
            <div class="progress-bar" role="progressbar" style="width: 40%" aria-valuenow="40" aria-valuemin="0"
                 aria-valuemax="100">40%
            </div>
        </div>
    </div>
    {# /Grid #}

    {# Grid #}
    <div class="col-12">
        {# Card #}
        <div class="dt-card">

            {{ form_start(form, {'attr': {'id': 'ba_form'}}) }}

            {# Breach Confirmation File Upload Form Row #}
            <div class="row">
                {# Grid Item #}
                <div class="col-md-12 col-sm-12">
                    {# Card #}
                    <div class="dt-card">
                        {# Card Header #}
                        <div class="dt-card__header">
                            <h4>12. Please upload a copy of the email from BA confirming that your personal information has been breached:</h4>
                        </div>
                        {# /Card Header #}
                        {# Card Body #}
                        <div class="dt-card__body">
                            <div class="row">
                                <div class="col-md-6 col-sm-6">
                                    <button id="further-correspondence-confirm-email-button" type="button" class="btn btn-primary mb-5" data-toggle="modal" data-target="#further-correspondence-stage">
                                        Choose File
                                    </button>
                                </div>
                                <div class="col-md-6 col-sm-6">
                                    <h4>All Uploaded Files For This Stage</h4>
                                    <ul class="list-group small js-reference-list" data-url="{{ path('get_file_references', {str: 'further-correspondence'}) }}"></ul>
                                </div>
                            </div>
                        </div>
                        {# /Card Body #}
                    </div>
                    {# /Card #}
                </div>
                {# /Grid Item #}
            </div>
            {# /Breach Confirmation File Upload Form Row #}

            {# Received Other BA Correspondence Form Row #}
            <div class="form-row">
                {# Grid Item #}
                <div class="col-md-12 col-sm-12">
                    {# Card #}
                    <div class="dt-card">
                        {# Card Header #}
                        <div class="dt-card__header">
                            <h4><span class="text-danger">*</span>13. Have you received any other correspondence from BA regarding the breach?</h4>
                        </div>
                        {# /Card Header #}
                        {# Card Body #}
                        <div class="dt-card__body">
                            <div class="row">
                                <div class="col-md-12 col-sm-12">
                                    {{ form_widget(form.receivedAnyOtherBACorrespondence) }}
                                    <div class="error_message">{{ form_errors(form.receivedAnyOtherBACorrespondence) }}</div>
                                </div>
                            </div>
                        </div>
                        {# /Card Body #}
                    </div>
                    {# /Card #}
                </div>
                {# /Grid Item #}
            </div>
            {# /Received Other BA Correspondence Form Row #}

            {# All Correspondence Files Upload Form Row #}
            <div class="form-row">
                {# Grid Item #}
                <div class="col-md-12 col-sm-12">
                    {# Card #}
                    <div class="dt-card">
                        {# Card Header #}
                        <div class="dt-card__header">
                            <h4>14. Please upload copies of all correspondence sent to and received from BA regarding the claim:</h4>
                        </div>
                        {# /Card Header #}
                        {# Card Body #}
                        <div class="dt-card__body">
                            <div class="row">
                                <div class="col-md-6 col-sm-6">
                                    <button id="further-correspondence-received-button" type="button" class="btn btn-primary mb-5" data-toggle="modal" data-target="#further-correspondence-stage">
                                        Choose File
                                    </button>
                                </div>
                                <div class="col-md-6 col-sm-6">
                                    <h4>All Uploaded Files For This Stage</h4>
                                    <ul class="list-group small js-reference-list" data-url="{{ path('get_file_references', {str: 'further-correspondence'}) }}"></ul>
                                </div>
                            </div>
                        </div>
                        {# /Card Body #}
                    </div>
                    {# /Card #}
                </div>
                {# /Grid Item #}
            </div>
            {# /All Correspondence Files Upload Form Row #}


            {# Submit Form Row #}
            <div class="form-row">
                <div class="form-group col-md-12 text-right">
                    <button type="submit" id="submit-form-button" class="btn btn-outline-info btn-lg" title="continue to the next stage...">Submit &amp; Continue <i class="icon icon-forward"></i></button>
                </div>
            </div>
            {# /Submit Form Row #}

            {{ form_end(form) }}

        </div>
        {# /Card #}
    </div>
    {# /Grid #}

    {{ include('dashboard/modals/_further_correspondence.html.twig') }}

{% endblock %}
