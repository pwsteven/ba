{% extends 'base.html.twig' %}

{% block title %}{{ header_text }}{% endblock %}

{% block body %}

    {# Grid #}
    <div class="col-12">
        {# Page Header #}
        <div class="dt-page__header">
            <h1 class="dt-page__title">{{ header_text }}</h1>
            <span>The British Airways OnBoarding App.</span>
        </div>
        {# /Page Header #}
    </div>
    {# /Grid #}

    {% for message in app.session.flashBag.get('page_success') %}
        <div class="dt-card__body">
            <div class="alert alert-primary alert-dismissible fade show" role="alert">
                <strong>Marvelous!</strong> You completed the Financial Loss section. Let's keep going...
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
    {% endfor %}

    {# Grid #}
    <div class="col-12">
        <div class="progress mb-5">
            <div class="progress-bar" role="progressbar" style="width: 70%" aria-valuenow="70" aria-valuemin="0"
                 aria-valuemax="100">70%
            </div>
        </div>
    </div>
    {# /Grid #}

    {# Grid #}
    <div class="col-12">
        {# Card #}
        <div class="dt-card">

            {{ form_start(form, {'attr': {'id': 'ba_form'}}) }}

            {# Reimbursed For Financial Loss Form Row #}
            <div class="form-row">
                {# Grid Item #}
                <div class="col-md-12 col-sm-12">
                    {# Card #}
                    <div class="dt-card">
                        {# Card Header #}
                        <div class="dt-card__header">
                            <h4><span class="text-danger">*</span>22. Have you ever been reimbursed for the financial loss you suffered?</h4>
                        </div>
                        {# /Card Header #}
                        {# Card Body #}
                        <div class="dt-card__body">
                            <div class="row">
                                <div class="col-md-12 col-sm-12">
                                    {{ form_widget(form.financialLossSuffered) }}
                                    <div class="error_message">{{ form_errors(form.financialLossSuffered) }}</div>
                                </div>
                            </div>
                            {# REIMBURSEMENTS BLOCK #}
                            <div id="reimbursements_block"{% if form.vars.data.financialLossSuffered != 'YES' %} class="display_none"{% endif %}>

                                <div class="block_body mt-5">

                                    {# Who Provided Reimbursement Form Row #}
                                    <div class="row">
                                        {# Grid Item #}
                                        <div class="col-md-12 col-sm-12">
                                            {# Card #}
                                            <div class="dt-card">
                                                {# Card Header #}
                                                <div class="dt-card__header">
                                                    <h4>Please state who provided the reimbursement:</h4>
                                                </div>
                                                {# /Card Header #}
                                                {# Card Body #}
                                                <div class="dt-card__body">
                                                    <div class="row">
                                                        <div class="col-md-12 col-sm-12">
                                                            {{ form_widget(form.provider) }}
                                                            <small class="form-text">For example: Bank; Credit Card Company; Finance Company</small>
                                                            <div class="error_message">{{ form_errors(form.provider) }}</div>
                                                        </div>
                                                    </div>
                                                </div>
                                                {# /Card Body #}
                                            </div>
                                            {# /Card #}
                                        </div>
                                        {# /Grid Item #}
                                    </div>
                                    {# /Who Provided Reimbursement Form Row #}

                                    {# Amount Reimbursed Form Row #}
                                    <div class="row">
                                        {# Grid Item #}
                                        <div class="col-md-12 col-sm-12">
                                            {# Card #}
                                            <div class="dt-card">
                                                {# Card Header #}
                                                <div class="dt-card__header">
                                                    <h4>Please enter the amount you were reimbursed:</h4>
                                                </div>
                                                {# /Card Header #}
                                                {# Card Body #}
                                                <div class="dt-card__body">
                                                    <div class="row">
                                                        <div class="col-md-12 col-sm-12">
                                                            <div class="input-group">
                                                                <div class="input-group-prepend">
                                                                    <span class="input-group-text"> &pound; </span>
                                                                </div>
                                                                {{ form_widget(form.amountReimbursed) }}
                                                            </div>
                                                            <div class="error_message">{{ form_errors(form.amountReimbursed) }}</div>
                                                        </div>
                                                    </div>
                                                </div>
                                                {# /Card Body #}
                                            </div>
                                            {# /Card #}
                                        </div>
                                        {# /Grid Item #}
                                    </div>
                                    {# /Amount Reimbursed Form Row #}

                                    {# Reimbursement Upload Files Form Row #}
                                    <div class="row">
                                        {# Grid Item #}
                                        <div class="col-md-12 col-sm-12">
                                            {# Card #}
                                            <div class="dt-card">
                                                {# Card Header #}
                                                <div class="dt-card__header">
                                                    <h4>Please upload any and all correspondence in relation to the reimbursement:</h4>
                                                </div>
                                                {# /Card Header #}
                                                {# Card Body #}
                                                <div class="dt-card__body">
                                                    <div class="row">
                                                        <div class="col-md-6 col-sm-6">
                                                            <button id="reimbursements-button" type="button" class="btn btn-primary mb-5" data-toggle="modal" data-target="#reimbursements-stage">
                                                                Choose File
                                                            </button>
                                                        </div>
                                                        <div class="col-md-6 col-sm-6">
                                                            <h4>All Uploaded Files For This Stage</h4>
                                                            <ul class="list-group small js-reference-list" data-url="{{ path('get_file_references', {str: 'reimbursements'}) }}"></ul>
                                                        </div>
                                                    </div>
                                                </div>
                                                {# /Card Body #}
                                            </div>
                                            {# /Card #}
                                        </div>
                                        {# /Grid Item #}
                                    </div>
                                    {# /Reimbursement Upload Files Form Row #}

                                </div>
                            </div>
                            {# /REIMBURSEMENTS BLOCK #}
                        </div>
                        {# /Card Body #}
                    </div>
                    {# /Card #}
                </div>
                {# /Grid Item #}
            </div>
            {# /Reimbursed For Financial Loss Form Row #}

            {# Submit Form Row #}
            <div class="form-row">
                <div class="form-group col-md-12 text-right">
                    <button type="submit" id="submit-form-button" class="btn btn-outline-info btn-lg" title="continue to the next stage...">Submit &amp; Continue <i class="icon icon-forward"></i></button>
                </div>
            </div>
            {# /Submit Form Row #}

            {{ form_end(form) }}

        </div>
        {# /Card #}
    </div>
    {# /Grid #}

    {{ include('dashboard/modals/_reimbursements.html.twig') }}

{% endblock %}
